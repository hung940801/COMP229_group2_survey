<form class="form" action="" method="POST">
    <div class="form-group">
        <label for="questionTextField">Question Content</label>
        <input type="text" class="form-control" id="questionTextField" name="question" placeholder="Enter the Question Content" required>
    </div>
    <div class="form-group">
        <label for="descriptionTextField">Belongs to which survey(?)</label>
        <select name="survey_id" id="surveySelect" class="form-control">
            <%for(let count = 0; count < surveyList.length; count++) {%>
                <option value="<%= surveyList[count]._id %>"><%= surveyList[count].name %></option>
            <% } %>
        </select>
    </div>

    <button class="btn btn-primary" type="submit"><i class="fas fa-edit"></i>&nbsp;Submit</button>
    <a href="/questions" class="btn btn-warning"><i class="fas fa-undo"></i>&nbsp;Cancel</a>
</form>
